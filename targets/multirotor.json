{
  "profile": "Multirotor OpenTX Sound Pack Addon",
  "directory": "./out/SOUNDS/en/",
  "audio_format": {
    "channels": 1,
    "sample_freq": 32000,
    "gain": 22
  },
  "filename_validaton": "^\\w{1,8}\\.\\w{1,3}$",
  "sounds": {
    "angle.wav"     : "angle ^32:1 mode >8:2",
    "acro.wav"      : "acro ^32:1 mode >8:2",
    "horiz.wav"     : "horizon ^32:1 mode >8:2",
    "hfree.wav"     : "headfree ^32:1 mode >8:2",
    "hfreer.wav"    : "headfree ^32:1 reset",
    "arm.wav"       : "arming",
    "disarm.wav"    : "disarmed",
    "beepon.wav"    : "beeper ^32:1 on",
    "nobeep.wav"    : "beeper ^32:1 off",
    "batlow.wav"    : "model ^32:3 battery ^32:1 low_a",
    "batcrit.wav"   : "model ^32:3 battery ^32:1 critical_a",
    "noflip.wav"    : "flip ^32:1 disabled",
    "flipon.wav"    : "flip ^32:1 enabled",
    "nolight.wav"   : "lights ^32:1 off",
    "lighton.wav"   : "lights ^32:1 on",
    "vidrec.wav"    : "video_recording ^32:1 started",
    "novrec.wav"    : "video_recording ^32:1 stopped",
    "notrn.wav"     : "trainer_has_control",
    "train.wav"     : "student_has_control",
    "bbrec.wav"     : "blackbox ^32:1 enabled",
    "bbdis.wav"     : "blackbox ^32:1 disabled",
    "airma.wav"     : "air ^16:1 mode -32:1 enabled",
    "airmd.wav"     : "air ^16:1 mode -32:1 disabled",
    "alth.wav"      : "altitude ^32:1 hold",
    "altf.wav"      : "altitude ^32:1 free",
    "hdgh.wav"      : "heading ^32:1 hold",
    "hdgf.wav"      : "heading ^32:1 free",
    "gtunea.wav"    : "g_tune ^32:1 enabled",
    "gtuned.wav"    : "g_tune ^32:1 disabled",
    "mdlrdy.wav"    : "model ^32:1 ready",
    "mdlflt.wav"    : "model ^32:1 fault",
    "celvl.wav"     : "cell ^16:1 voltage ^32:1 low_a",
    "celvc.wav"     : "cell ^16:1 voltage ^32:1 critical_a"
  }
}
